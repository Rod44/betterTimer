{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "author": "Rodrigue Buisson",
  "description": "Focus - A simple, intuitive timer app for macOS",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:electron": "concurrently -k \"next dev --turbopack\" \"wait-on tcp:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "build": "next build && electron-builder",
    "start": "next start",
    "start:prod": "npm run build && concurrently -k \"next start -p 3000\" \"wait-on tcp:3000 && cross-env NODE_ENV=production ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "start:electron": "cross-env NODE_ENV=production electron .",
    "dist": "npm run build && cross-env SKIP_REBUILD=true electron-builder --mac",
    "lint": "eslint"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "shadcn": "^3.3.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.example.better-timer",
    "productName": "Focus",
    "npmRebuild": false,
    "nativeRebuilder": null,
    "asarUnpack": [
      "out/**",
      "public/**"
    ],
    "files": [
      "electron/**",
      "out/**",
      "public/**",
      "next.config.ts",
      "package.json",
      "node_modules/**"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "Focus Installer",
      "icon": "public/icon.icns",
      "background": null,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  }
}
